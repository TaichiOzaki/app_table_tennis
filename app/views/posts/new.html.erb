<header class="h1_tabletennis">
    卓球練習管理
</header>

<div class="container">
 <div class="row">
  <div class="col-md-8 mx-autp post-form-container">
   <h2 class="h2">新規練習追加</h2>
   <%= form_with(url: create_post_path, model: @post, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>
   

    <% if @post.errors.any? %>
     <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %> </ul>
    <% end %>
      
    <div class="form-group">
     <%= f.label"練習タイトル",class: 'form-label'%>
     <%= f.text_field:title, class: 'form-control'%>
    <div>
    
    <div class="form-group">
     <%= f.label "練習内容", class: 'form-label' %>
     <%= f.text_area :body, class: 'form-control' %>
    </div>

    <div class="form-group">
     <%= f.label :id,"URL", class: 'form-label' %>
     <%= f.text_area :url, class: 'form-control' %>
    </div>
    
    <div class="form-group image-upload">
     <%= f.label "画像", class: 'form-label' %>
     <div class="image-preview" id="imagePreview">
      <img src="" alt="Image Preview" class="image-preview__image">
      <span class="image-preview__default-text">Image will be displayed here</span>
     </div>
     <%= f.file_field :image, class: 'form-control-file', id: 'imageUpload' %>
    </div>
    
    <div class="button-group">
     <%= f.submit '新規練習追加', class: 'button-003' %>
    </div>
   <% end %>
  </div>3
 </div>
</div>

