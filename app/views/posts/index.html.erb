<h1 class="title_1">練習一覧 / 練習新規追加</h1>

<div class="center_position">
  <button type="button" class="btn btn-success" id="show-selected">選択したデータを表示</button>
</div>



<div class="post-list">
  <% @posts.each do |post| %>
    <div class="post">
      <input type="checkbox" name="selected_posts[]" value="<%= post.id %>">
      <a class="post" href="<%= edit_post_path(post) %>">
        <div class="header">
          <h2 class="title"><%= post.title %></h2>
          <p class="timestamp"><%= post.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </a>
    </div>
  <% end %>
</div>



