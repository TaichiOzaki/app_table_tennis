<div class="Practice-Title">選択した練習タイトル:</div>
<div id="selected-post-titles"></div>

<script>
  document.getElementById('show-selected').addEventListener('click', function() {
    var checkboxes = document.querySelectorAll('input[name="selected_posts[]"]:checked');
    var selectedPostTitles = Array.from(checkboxes).map(function(checkbox) {
      return checkbox.parentNode.nextElementSibling.querySelector('.title').textContent;
    });

    var selectedPostTitlesContainer = document.getElementById('selected-post-titles');
    selectedPostTitlesContainer.innerHTML = '';

    selectedPostTitles.forEach(function(title) {
      var p = document.createElement('p');
      p.textContent = title;
      selectedPostTitlesContainer.appendChild(p);
    });
  });
</script>

